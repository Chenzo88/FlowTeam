<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NoVuelvoAInProgress</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status,&quot;In Progress&quot;), ISPICKVAL(PRIORVALUE(Status),&quot;Completed&quot;))</errorConditionFormula>
    <errorMessage>Una vez completada la tarea No puede volver a In Progress</errorMessage>
</ValidationRule>
